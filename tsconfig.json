{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "outDir": ".",
    "noEmitOnError": true,
    "sourceMap": false,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "lib": [ "es6" ]
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**",
    "test/**",
    "index.js"
  ],
  "compileOnSave": true
}