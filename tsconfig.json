{
  "compilerOptions": {
//    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "outDir": ".",
    "noEmitOnError": true,
    "sourceMap": false,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "lib": [ "es2015", "dom" ]
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**",
    "test/**"
  ],
  "compileOnSave": true
}